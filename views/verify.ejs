<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <i class="fas fa-arrow-right"></i>
                <span>Arrow API</span>
            </div>
            <div class="nav-links">
                <a href="/" class="nav-link">Home</a>
                <a href="/docs" class="nav-link">Documentation</a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="nav-link">Dashboard</a>
                    <a href="/verify" class="nav-link active">Verify</a>
                    <div class="user-menu">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.png" alt="Avatar" class="user-avatar">
                        <span class="username"><%= user.username %></span>
                        <a href="/auth/logout" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </div>
                <% } else { %>
                    <a href="/login" class="login-btn">
                        <i class="fab fa-discord"></i>
                        Login with Discord
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <% if (typeof dbUnavailable !== 'undefined' && dbUnavailable) { %>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h2>Database Unavailable</h2>
                    <p>The verification system is temporarily unavailable. Please try again later.</p>
                </div>
            <% } else { %>
                <div class="verify-container">
                    <div class="verify-header">
                        <i class="fas fa-shield-alt"></i>
                        <h1>Account Verification</h1>
                        <p>Generate a verification code to link your Discord account and receive server roles.</p>
                    </div>

                    <div class="verify-card">
                        <div class="code-section">
                            <h3>Verification Code</h3>
                            <% if (typeof existingCode !== 'undefined' && existingCode) { %>
                                <div class="code-display">
                                    <div class="code-text" id="verificationCode"><%= existingCode.code %></div>
                                    <button class="copy-btn" onclick="copyCode()">
                                        <i class="fas fa-copy"></i>
                                        Copy
                                    </button>
                                </div>
                                <div class="code-info">
                                    <p><i class="fas fa-clock"></i> Expires: <span id="expiryTime"><%= new Date(existingCode.expiresAt).toLocaleString() %></span></p>
                                    <p><i class="fas fa-info-circle"></i> Use this code in Discord to link your account</p>
                                </div>
                            <% } else { %>
                                <div class="no-code">
                                    <p>No active verification code found.</p>
                                </div>
                            <% } %>
                            
                            <button class="generate-btn" onclick="generateCode()">
                                <i class="fas fa-refresh"></i>
                                <span id="generateText"><%= (typeof existingCode !== 'undefined' && existingCode) ? 'Regenerate Code' : 'Generate Code' %></span>
                            </button>
                        </div>

                        <div class="instructions-section">
                            <h3>How to Use</h3>
                            <ol class="instructions-list">
                                <li>
                                    <i class="fas fa-code"></i>
                                    <span>Generate or copy your verification code above</span>
                                </li>
                                <li>
                                    <i class="fab fa-discord"></i>
                                    <span>Go to the Discord server and use the link panel</span>
                                </li>
                                <li>
                                    <i class="fas fa-keyboard"></i>
                                    <span>Enter your verification code when prompted</span>
                                </li>
                                <li>
                                    <i class="fas fa-check"></i>
                                    <span>Receive your server roles automatically</span>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h4>Arrow API</h4>
                <p>Powerful Roblox group membership API</p>
            </div>
            <div class="footer-section">
                <h4>Links</h4>
                <a href="/docs">Documentation</a>
                <a href="/docs/auth">Authentication</a>
                <a href="https://github.com" target="_blank">GitHub</a>
            </div>
            <div class="footer-section">
                <h4>Support</h4>
                <a href="https://discord.gg/fR4YdqgTnB" target="_blank">Discord Server</a>
                <a href="mailto:.archiveant">Contact</a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Arrow API. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>

    <style>
    .verify-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .verify-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .verify-header i {
        font-size: 4rem;
        color: #ffffff;
        margin-bottom: 1rem;
    }

    .verify-header h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #ffffff;
    }

    .verify-header p {
        font-size: 1.2rem;
        color: #cccccc;
    }

    .verify-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 2rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    .code-section h3,
    .instructions-section h3 {
        color: #ffffff;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
    }

    .code-display {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .code-text {
        font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        font-size: 1.1rem;
        color: #ffffff;
        flex: 1;
        word-break: break-all;
    }

    .copy-btn {
        background: #ffffff;
        color: #000000;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .copy-btn:hover {
        background: #cccccc;
    }

    .code-info {
        margin-bottom: 1.5rem;
    }

    .code-info p {
        color: #cccccc;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .no-code {
        padding: 2rem;
        text-align: center;
        color: #cccccc;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .generate-btn {
        background: #ffffff;
        color: #000000;
        border: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        width: 100%;
        justify-content: center;
    }

    .generate-btn:hover {
        background: #cccccc;
    }

    .generate-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .instructions-list {
        list-style: none;
        padding: 0;
    }

    .instructions-list li {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        color: #ffffff;
    }

    .instructions-list i {
        font-size: 1.5rem;
        color: #ffffff;
        width: 2rem;
        text-align: center;
    }

    .alert-warning {
        background-color: rgba(255, 193, 7, 0.1);
        border: 2px solid #ffc107;
        border-radius: 12px;
        padding: 3rem;
        text-align: center;
        max-width: 600px;
        width: 100%;
        margin: 0 auto;
    }

    .alert-warning i {
        font-size: 4rem;
        color: #ffc107;
        margin-bottom: 1.5rem;
    }

    .alert-warning h2 {
        color: #ffc107;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .alert-warning p {
        color: #ffffff;
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .verify-card {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
    </style>

    <script>
    async function generateCode() {
        const button = document.querySelector('.generate-btn');
        const buttonText = document.getElementById('generateText');
        
        button.disabled = true;
        buttonText.textContent = 'Generating...';
        
        try {
            const response = await fetch('/verify/generate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                location.reload(); // Reload to show new code
            } else {
                alert('Failed to generate code: ' + (data.message || data.error));
            }
        } catch (error) {
            alert('Error generating code: ' + error.message);
        } finally {
            button.disabled = false;
            buttonText.textContent = 'Generate Code';
        }
    }

    function copyCode() {
        const codeText = document.getElementById('verificationCode').textContent;
        navigator.clipboard.writeText(codeText).then(() => {
            const copyBtn = document.querySelector('.copy-btn');
            const originalText = copyBtn.innerHTML;
            copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
            copyBtn.style.background = '#22c55e';
            
            setTimeout(() => {
                copyBtn.innerHTML = originalText;
                copyBtn.style.background = '#ffffff';
            }, 2000);
        }).catch(err => {
            alert('Failed to copy code');
        });
    }
    </script>
</body>
</html>
